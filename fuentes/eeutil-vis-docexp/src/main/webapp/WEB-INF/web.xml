<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1" id="WebApp_ID">
	<description>eeutil-vis-docexp WS</description>
	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<context-param>
		<param-name>log4jConfiguration</param-name>
		<param-value>file:///${sys:catalina.home}/conf/eeutil-vis-docexp/log4j2.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.apache.logging.log4j.web.Log4jServletContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<listener>
      <listener-class>es.mpt.dsic.inside.config.listener.InfoAppListener</listener-class>
   	</listener>
   	
	<listener>
      <listener-class>es.mpt.dsic.inside.config.listener.AltaHostForCache</listener-class>
   	</listener>	   	   			

   	<!-- prevencion memory leaks -->
   	
	<listener>
      <listener-class>es.mpt.dsic.inside.config.listener.ContextFinalizer</listener-class>
   	</listener>	 
   	  	 	
	<listener>
	    <listener-class>se.jiderhamn.classloader.leak.prevention.ClassLoaderLeakPreventorListener
	        </listener-class>
	 </listener>
	  <context-param>
	    <param-name>ClassLoaderLeakPreventor.stopThreads</param-name>
	    <param-value>true</param-value>
	  </context-param>
	  <context-param>
	    <param-name>ClassLoaderLeakPreventor.stopTimerThreads</param-name>
	    <param-value>true</param-value>
	  </context-param>
	  <context-param>
	    <param-name>ClassLoaderLeakPreventor.executeShutdownHooks</param-name>
	    <param-value>true</param-value>
	  </context-param>
	  <context-param>
	    <param-name>ClassLoaderLeakPreventor.threadWaitMs</param-name>
	    <param-value>180000</param-value>
	  </context-param>
	  <context-param>
	    <param-name>ClassLoaderLeakPreventor.shutdownHookWaitMs</param-name>
	    <param-value>240000</param-value>
	  </context-param>
	
    	<!-- fin prevencion memory leaks --> 


